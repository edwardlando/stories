<%= form_for(@post, :html => { :multipart => true }) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "post_title_input" %>
  </div>
  <div class="field">
    <%= f.label :image, "Image for your piece" %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :remote_image_url, "or image URL" %>
    <%= f.text_field :remote_image_url %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, :class => "post_content_input redactor" %>
  </div>
  <div class="actions">
    <%= f.submit "Publish", :class => "btn btn-custom-grey" %>
  </div>
<% end %>


