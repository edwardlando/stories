<% if user_signed_in? %>
    <%= button_to "Submit a new post", new_post_path, :class => "btn btn-large btn-primary", :method => :get %>
<% end %>




<% @posts.each do |post| %>
  
    <%= link_to post.title, post %>
    <%= post.user.username unless post.user.nil? %>
    <%= post.content[0..100] + "..." %>

    <br />
    
<% end %>





