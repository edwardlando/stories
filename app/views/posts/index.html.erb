<h1 id="logo"><%= link_to "STORIES", root_path %></h1>

<% if user_signed_in? %>
    <%= button_to "Publish a new piece", new_post_path, :class => "btn btn-custom-grey", :method => :get %>
<% end %>


<% @posts.each do |post| %>
  
    <p class="post_title">
    	<%= link_to post.title, post %>
    </p>
    <p class="author_username">
      <%= link_to post.user.username, post.user %>
    </p>
    <p class="post_content">
    <%= simple_format(post.content[0..300] + "...") %>
    </p>
    <br /> <br/>
    
<% end %>





