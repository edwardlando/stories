<div id="logo"><%= link_to "THE FILADELFIAN", root_path %></div>
<div id="tagline">Sharp Writing</div>
<br />

<% if user_signed_in? %>
    <div id="publish_link" class="purple_hover">
        <%= link_to image_tag("fountainpen.svg"), new_post_path, :method => :get %>
        <%= link_to "PUBLISH SOMETHING NEW", new_post_path, :method => :get %>
    </div>
<% end %>

<br/>
<br/>
<br/>

<div class="content">
    <% @posts.each do |post| %>
        <div class="post">
            <div class="post_heading">
                <div class="post_date">
                    <%= Time.at(post.created_at.to_time.to_i).strftime("%B %e, %Y ") %>
                </div> 
                <div class="post_title purple_hover">
                	<%= link_to post.title, post %>
                </div>
                <div class="post_author purple_hover">
                  <%= link_to "#{post.user.first_name} #{post.user.last_name}", post.user %>
                </div>
            </div> 
            <div class="post_content">
            <%= simple_format(post.content[0..300] + "...") %>
            </div>
        </div>        
    <% end %>
</div>


